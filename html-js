        <input type="number" id="n1" name="n1" class="text-box" placeholder="Enter First Number">
        </br></br>
        <input type="number" id="n2" name="n2" class="text-box" placeholder="Enter Second Number">
        </br></br>
        <input type="button" id="plus" class="btn" value="+" >
        <input type="button" id="minus" class="btn" value="-">
        <input type="button" id="multi" class="btn" value="*">
        <input type="button" id="divide" class="btn" value="/">


        <script>
            var a = document.getElementById("n1").value
            var b = document.getElementById("n2").value

            document.getElementById("plus").onclick = document.write(a+b)
            document.getElementById("minus").onclick = document.write(a-b)
            document.getElementById("multi").onclick = document.write(a*b)
            document.getElementById("divide").onclick = document.write(a/b)

